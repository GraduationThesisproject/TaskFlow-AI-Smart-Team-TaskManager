# TaskFlow Mobile App Environment Configuration
# Copy this file to .env and update the values as needed

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://192.168.1.11:3001
EXPO_PUBLIC_API_URL=http://192.168.1.11:3001/api
EXPO_PUBLIC_SOCKET_URL=http://192.168.1.11:3001
EXPO_PUBLIC_BASE_URL=http://192.168.1.11:3001

# Development URLs
EXPO_PUBLIC_DEV_API_URL=http://192.168.1.11:3001/api
EXPO_PUBLIC_STAGING_API_URL=http://192.168.1.11:3001/api
EXPO_PUBLIC_PROD_API_URL=http://192.168.1.11:3001/api

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_API_MOCKING=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_DEEP_LINKING=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_CRASH_REPORTING_ENABLED=false
EXPO_PUBLIC_PERFORMANCE_MONITORING_ENABLED=false

# OAuth Callback URLs
EXPO_PUBLIC_GOOGLE_CALLBACK_URL=http://192.168.1.11:3001/auth/google/callback
EXPO_PUBLIC_GITHUB_CALLBACK_URL=http://192.168.1.11:3001/api/auth/github/callback

# Deep Linking
EXPO_PUBLIC_DEEP_LINK_HOST=taskflow

# Localization
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,es,fr,de
EXPO_PUBLIC_DEFAULT_THEME=light
