{
  "name": "@taskflow/backend",
  "version": "2.0.0",
  "description": "TaskFlow backend API server",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step needed for Express server'",
    "lint": "eslint src/ --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='(?!integration).*\\.test\\.js$'",
    "test:integration": "jest --testPathPattern='integration\\.test\\.js$'",
    "test:specific": "jest --testNamePattern",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:socket": "node src/tests/run-socket-tests.js",
    "test:socket:board": "node src/tests/run-socket-tests.js socket.board",
    "test:socket:task": "node src/tests/run-socket-tests.js socket.task",
    "test:socket:notification": "node src/tests/run-socket-tests.js socket.notification",
    "test:socket:workspace": "node src/tests/run-socket-tests.js socket.workspace",
    "type-check": "echo 'No TypeScript check needed for JS-only backend'",
    "seed": "node src/scripts/seed.js",
    "seed:enhanced": "node src/scripts/seed-enhanced.js",
    "seed:partial": "node src/scripts/seed-partial.js",
    "seed:clear": "node src/scripts/seed-partial.js clear",
    "seed:users": "node src/scripts/show-test-users.js",
    "seed:analytics": "node run-analytics-fixed.js",
    "export:analytics": "node export-analytics.js",
    "import:analytics": "node import-analytics.js",
    "seed:backup": "node -e \"const seeder = require('./src/seeders'); const s = new seeder(); s.listBackups().then(console.log)\"",
    "seed:rollback": "node -e \"const seeder = require('./src/seeders'); const s = new seeder(); s.rollback().then(() => console.log('Rollback completed'))\"",
    "seed:validate": "node -e \"const seeder = require('./src/seeders'); const s = new seeder(); console.log(s.validateConfiguration())\"",
    "admin:create": "node scripts/create-admin.js"
  },
  "keywords": [
    "taskflow",
    "api",
    "express"
  ],
  "author": "TaskFlow Team",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.11.1",
    "@faker-js/faker": "^8.4.1",
    "@google/generative-ai": "^0.24.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@taskflow/utils": "*",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "file-type": "^19.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "openai": "^4.20.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.0",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^18.5.0",
    "validator": "^13.11.0",
    "web-push": "^3.6.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.10",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "typescript": "^5.9.2"
  }
}
