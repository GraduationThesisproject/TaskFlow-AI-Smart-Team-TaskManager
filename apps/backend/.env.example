# TaskFlow Backend Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/taskflow

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (auto-detected, but can be overridden)
# FRONTEND_URL=http://localhost:5173

# Email Configuration (optional - email features will be disabled if not set)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AI Configuration (optional)
# OPENAI_API_KEY=your-openai-api-key

# OAuth Configuration (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Stripe Configuration (optional - payment features will be disabled if not set)
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Power BI Configuration (optional)
# POWERBI_CLIENT_ID=your-powerbi-client-id
# POWERBI_CLIENT_SECRET=your-powerbi-client-secret
# POWERBI_TENANT_ID=your-powerbi-tenant-id

# File Upload Configuration (auto-detected, but can be overridden)
# BASE_URL=http://localhost:3001
# UPLOAD_DIR=uploads
# MAX_FILE_SIZE=10485760
